<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".LibraryFragment">


    <com.sdsmdg.harjot.longshadows.LongShadowsWrapper

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue"
        android:gravity="center">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.sdsmdg.harjot.longshadows.LongShadowsImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="30dp"
                    android:src="@drawable/ic_circle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:shadow_angle="135"
                    app:shadow_blur_enabled="true"
                    app:shadow_blur_radius="20" />

                <com.sdsmdg.harjot.longshadows.LongShadowsImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="300dp"
                    android:src="@drawable/ic_circle"
                    app:shadow_angle="45"
                    app:shadow_blur_enabled="true"
                    app:shadow_blur_radius="20" />
            </LinearLayout>

            <com.sdsmdg.harjot.longshadows.LongShadowsTextView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:gravity="center"
                android:text="Teni"
                android:textColor="#FFFFFF"
                android:textSize="50sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shadow_angle="55"
                app:shadow_blur_enabled="true"
                app:shadow_blur_radius="10" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.sdsmdg.harjot.longshadows.LongShadowsWrapper>
</androidx.constraintlayout.widget.ConstraintLayout>